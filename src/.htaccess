RewriteEngine On

# Rewrite URLs to remove /pages/ but still serve files from /pages/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /pages/$1 [L]

